@model IEnumerable<Request>

@{ 

}


@if (Model.Count() > 0)
{

    <span>Список предложений вам на управление машиной</span>
    <hr />
    <ul>
        @foreach (var rq in Model)
        {
            <li>
                <span>Вам предложили управлять </span>
                <a asp-controller="Car" asp-action="ACar" asp-route-id="@rq.IdCar" >машиной</a> | 
                <a asp-controller="Request" asp-action="AcceptDriving" asp-route-requestId="@rq.Id">Согласиться </a> |  
                <a asp-controller="Request" asp-action="DeclineRequest" asp-route-sender="DrivingRequest" asp-route-requestId="@rq.Id">Отказаться </a> | 
            </li>
        }

    </ul>

}
else
{
    <span>Нет входящих запросов</span>
}