@model IEnumerable<Request>


@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


@if (Model.Count() > 0)
{

    <span>@Localizer["ofer"]</span>
    <hr />
    <ul>
        @foreach (var rq in Model)
        {
            <li>
                <span>@Localizer["you"] <a asp-controller="Cargo" asp-action="ACargo" asp-route-id="@rq.IdCargo">@Localizer["this"]</a> @Localizer["carg"] </span>
                |
                <a asp-controller="Request" asp-action="AcceptCompanyToUser" asp-route-requestId="@rq.Id">@Localizer["accept"] </a> |
                <a asp-controller="Request" asp-action="DeclineRequest" asp-route-sender="CompanyToUser" asp-route-requestId="@rq.Id">@Localizer["refuse"] </a> |
            </li>
        }

    </ul>

}
else
{
    <span>@Localizer["none"]</span>
}