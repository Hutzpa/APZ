@model ListViewModel<Group>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["title"];
}

@if (Enumerable.Count(Model.List) == 0)
{
    <h3>@Localizer["none"]</h3>
    <a asp-controller="Groups" asp-action="CreateGroup">@Localizer["create"]</a>
}
else
{
    <ul>
        @foreach (var cr in Model.List)
        {

            <li>
                @Localizer["one"] -<a asp-controller="Groups" asp-action="AGroup" asp-route-idOfGroup="@cr.IdGroup">
                    @cr.GroupName
                </a>
            </li>
        }
    </ul>

    <div>
        @if (Model.PageNumber > 1)
        {
            <a asp-controller="Groups" asp-action="GroupList" asp-route-pageNumber="@(Model.PageNumber-1)">@Localizer["prev"]</a>

        }
        @if (Model.CanNext)
        {

            <a asp-controller="Groups" asp-action="GroupList" asp-route-pageNumber="@(Model.PageNumber + 1)">@Localizer["next"]</a>
        }
    </div>
}