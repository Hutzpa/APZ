@model IEnumerable<Group>

@{
    ViewBag.Title = "Ващі машини";
}

@if (Model.Count() == 0)
{
    <h3>У вас ще не мае груп</h3>
    <a asp-controller="Groups" asp-action="CreateGroup">Додайте</a>
}
else
{
    <ul>
        @foreach (var cr in Model)
        {

            <li>
                Одна з ваших груп -<a asp-controller="Groups" asp-action="AGroup" asp-route-idOfGroup="@cr.IdGroup">
                    @cr.GroupName
                </a>
                <hr />
                <span>@cr.IdGroup - Ид групы</span>
                <hr />
                <span>@cr.IdOwner.Id - Ид владельца </span>
                <hr />
            </li>
        }
    </ul>
}