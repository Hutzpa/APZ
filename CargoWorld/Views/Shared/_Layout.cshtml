<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href=" https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css " rel="stylesheet " />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />

</head>


<body>
    <header>
        <div class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom  mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    Cargo world
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item mt-3">
                                <div class="dropdown show">
                                    <a class="btn btn-secondary dropdown-toggle" style="background-color : transparent" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["cars"]
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-controller="Car" asp-action="CreateCar">@Localizer["createCar"]</a>
                                        <a class="dropdown-item" asp-controller="Car" asp-action="ImDriving">@Localizer["imDriving"]</a>
                                        <a class="dropdown-item" asp-controller="Car" asp-action="MyCars">@Localizer["myCars"]</a>
                                    </div>
                                </div>
                            </li>


                            <li class="nav-item ml-1 mt-3">
                                <div class="dropdown show">
                                    <a class="btn btn-secondary dropdown-toggle" style="background-color : transparent" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["groups"]
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-controller="Groups" asp-action="CreateGroup">
                                            @Localizer["createGroup"]

                                        </a>
                                        <a class="dropdown-item" asp-controller="Groups" asp-action="GroupList">
                                            @Localizer["myGroups"]

                                        </a>
                                    </div>
                                </div>
                            </li>


                            <li class="nav-item ml-1 mt-3">
                                <div class="dropdown show">
                                    <a class="btn btn-secondary dropdown-toggle" style="background-color : transparent" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["cargos"]
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-controller="Cargo" asp-action="CreateCargo">
                                            @Localizer["createCargo"]
                                        </a>
                                        <a class="dropdown-item" asp-controller="Cargo" asp-action="CargoList">
                                            @Localizer["cargoList"]
                                        </a>
                                        <a class="dropdown-item" asp-controller="Cargo" asp-action="IMTransporting">
                                            @Localizer["cargosIm"]
                                        </a>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item ml-1 mt-3">
                                <div class="dropdown show">
                                    <a class="btn btn-secondary dropdown-toggle" style="background-color : transparent" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["requests"]
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-controller="Request" asp-action="DrivingRequest">
                                            @Localizer["drivingRequest"]
                                        </a>
                                        <a class="dropdown-item" asp-controller="Request" asp-action="CompanyToUser">
                                            @Localizer["companyToUser"]
                                        </a>
                                        <a class="dropdown-item" asp-controller="Request" asp-action="UserToCompany">
                                            @Localizer["userToCompany"]
                                        </a>
                                    </div>
                                </div>
                            </li>



                            <li class="nav-item ml-1 mt-3">
                                <form asp-controller="Home" asp-action="Search" method="get" enctype="multipart/form-data">
                                    <input class="form-control mr-sm-2" type="text" name="search" placeholder=" @Localizer["searchReq"]" />
                                </form>
                            </li>

                            <li class="nav-item ml-1 mt-3">
                                <div class="dropdown show">
                                    <a class="btn btn-secondary dropdown-toggle" style="background-color : transparent" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @Localizer["settings"]
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                       
                                        <a class="dropdown-item" asp-controller="Auth" asp-action="ChangePass">
                                            @Localizer["change"]
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a class="dropdown-item" asp-controller="Home" asp-action="AdminPanel" >@Localizer["admin"]</a>
                                        }
                                        <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                            @Localizer["logOut"]
                                        </a>
                                    </div>
                                </div>

                            </li>



                        }
                        else
                        {

                            <li class="nav-item mt-3 mb-3 mr-2">
                                <a class="btn btn-dark" asp-controller="Auth" asp-action="Login">@Localizer["logIn"]</a>
                            </li>
                        }

                            <li class="nav-item ml-3 mb-4 pt-2">
                                <div>
                                    @await Html.PartialAsync("_SelectLanguagePartial.cshtml")
                                </div>
                            </li>

                    </ul>
                </div>
            </div>
        </div>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <footer class="d-inline-flex ml-auto container fixed-bottom">
        <p class="float-right">@Localizer["ownrRights"]</p>
        <p class="float-right">@Localizer["made"] </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
