@model Car

@{
    ViewBag.Title = Model.CarModel;
}

<div class="mb-3">
    @if (!String.IsNullOrEmpty(Model.Photo))
    {
        var imagePath = $"/content/webs/{Model.Photo}";
        <img src="@imagePath" height="300" width="600" />
    }
</div>
<div>
    <p>Марка машини - @Model.CarModel</p>
    <hr />
    <p>Кольор - @Model.Color</p>
    <hr />
    <p>Тип машини - @Model.CarType </p>
    <hr />
    <p>Номер - @Model.RegistrationNumber</p>
    <hr />
    <p>Тип транспортуємого вантажу - @Model.CargoType</p>
    <hr />    
    @*<p>Вантажопідйомність - @Model.CarryingCapacity</p>
    <hr />*@    
    <p>Ціна за перевезення кілометру вантажу - @Model.CostPerKm</p>
    <hr />    
</div>